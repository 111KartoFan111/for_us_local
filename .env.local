# .env.local - Локальная разработка

# Backend settings
NODE_ENV=development
API_PORT=8100
JWT_SECRET=local-development-secret-key-2025-change-in-production
PORT=8100

# Admin user (для входа в админку)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# MinIO settings - Локальная разработка
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_PUBLIC_URL=http://localhost:9000
MINIO_ACCESS_KEY=localadmin
MINIO_SECRET_KEY=localadmin123
MINIO_ROOT_USER=localadmin
MINIO_ROOT_PASSWORD=localadmin123
MINIO_BUCKET_NAME=portfolio-files
MINIO_REGION=us-east-1

# Frontend settings
REACT_APP_API_URL=http://localhost:8100/api
REACT_APP_MINIO_URL=http://localhost:9000

# CORS для локальной разработки
CORS_ORIGIN=http://localhost:3100
CORS_CREDENTIALS=true

# Database
DATABASE_PATH=/app/data/db.json

# Logging
LOG_LEVEL=debug

# Development specific
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# Hot reload для React (если нужно)
FAST_REFRESH=true
GENERATE_SOURCEMAP=true