{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Backend for 3D Portfolio with Express and LowDB",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon --ignore data/ --ignore backup/ --ignore logs/ --ignore '*.log' src/app.js",
    "dev:verbose": "nodemon --ignore data/ --ignore backup/ --ignore logs/ --verbose src/app.js",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "nodemonConfig": {
    "ignore": [
      "data/**/*",
      "backup/**/*", 
      "logs/**/*",
      "*.log",
      "*.backup",
      "*.tmp"
    ],
    "ext": "js,mjs,json",
    "env": {
      "NODE_ENV": "development"
    },
    "delay": "1000"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "lowdb": "^3.0.0",
    "mime-types": "^2.1.35",
    "minio": "^7.1.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Your Name",
  "license": "MIT"
}